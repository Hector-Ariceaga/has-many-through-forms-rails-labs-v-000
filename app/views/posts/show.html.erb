<%= @post.title %>
<%= @post.content %>

<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <p><%= comment.content %></p>
<% end %>
<h3>Users who have commented</h3>
<% @post.users.uniq.each do |user| %>
  <p><%= link_to user.username, user_path(user) %></p>
<% end %>
<h3>Categories</h3>
<% @post.categories.each do |cat| %>
  <%= link_to cat.name, category_path(cat) %>
<% end %>

<h1>Make a Comment</h1>
<%= form_for @post do |f| %>
  <%= f.label 'Title' %>
  <%= f.text_field :title %>
  <%= f.label 'Content' %>
  <%= f.text_area :content %>
  <%= f.label 'category(s)' %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, include_blank: true %><br>
  <%= f.label 'New Category' %>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
